{
    "openapi": "3.0.3",
    "info": {
        "title": "API Ecomm",
        "description": "Esta é uma api para manipulação de produtos do eccomerce.",
        "contact": {
            "email": "sac@ecomm.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "API de teste"
        }
    ],
    "paths": {
        "/products": {
            "post": {
                "tags": [
                    "Product"
                ],
                "summary": "Cadastro de produtos",
                "description": "Essa rota será responsável por cadastrar um novo produto",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Product"
                            },
                            "examples": {
                                "product": {
                                    "value": {
                                        "produto": {
                                            "nome": "coca",
                                            "valor": "2",
                                            "quantidade": "1",
                                            "descricao": "refrigerante lata",
                                            "categoria": "bebidas",
                                            "caracteristicas": [
                                                {
                                                    "nome": "refrigerante",
                                                    "descricao": " bebidas"
                                                }
                                            ],
                                            "imagens": [
                                                {
                                                    "url": "https://pixabay.com/pt/photos/posso-lata-de-cola-cola-bebida-592366/",
                                                    "descricao": "refrigerante de lata"
                                                }
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Error creating product!"
                    },
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "products": {
                                        "value": {
                                            "id": "aba246ac-7cae-405f-9d7c-f38f7229d5b3",
                                            "createdDate": "2022-12-22",
                                            "produto": {
                                                "nome": "coca",
                                                "valor": "2",
                                                "quantidade": "1",
                                                "descricao": "refrigerante lata",
                                                "categoria": "bebidas",
                                                "caracteristicas": [
                                                    {
                                                        "nome": "refrigerante",
                                                        "descricao": " bebidas"
                                                    }
                                                ],
                                                "imagens": [
                                                    {
                                                        "url": "https://pixabay.com/pt/photos/posso-lata-de-cola-cola-bebida-592366/",
                                                        "descricao": "refrigerante de lata"
                                                    }
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "Product"
                ],
                "summary": "lista de produtos cadastrados",
                "description": "Essa rota será responsável por listar os produtos cadastrados",
                "responses": {
                    "500": {
                        "description": "Error fetching products!"
                    },
                    "200": {
                        "description": "success",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "products": {
                                        "value": {
                                            "id": "aba246ac-7cae-405f-9d7c-f38f7229d5b3",
                                            "createdDate": "2022-12-22",
                                            "produto": {
                                                "nome": "coca",
                                                "valor": "2",
                                                "quantidade": "1",
                                                "descricao": "refrigerante lata",
                                                "categoria": "bebidas",
                                                "caracteristicas": [
                                                    {
                                                        "nome": "refrigerante",
                                                        "descricao": " bebidas"
                                                    }
                                                ],
                                                "imagens": [
                                                    {
                                                        "url": "https://pixabay.com/pt/photos/posso-lata-de-cola-cola-bebida-592366/",
                                                        "descricao": "refrigerante de lata"
                                                    }
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Product": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string"
                    },
                    "valor": {
                        "type": "string"
                    },
                    "quantidade": {
                        "type": "string"
                    },
                    "descricao": {
                        "type": "string"
                    },
                    "categoria": {
                        "type": "string"
                    },
                    "caracteristicas": {
                        "type": "array",
                        "items": {
                            "nome": "string",
                            "descricao": "string"
                        }
                    },
                    "imagens": {
                        "type": "array",
                        "items": {
                            "url": "string",
                            "descricao": "string"
                        }
                    }
                }
            }
        }
    }
}